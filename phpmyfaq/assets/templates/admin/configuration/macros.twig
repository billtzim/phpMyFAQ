  <select id="edit[{{ key }}]" name="edit[{{ key }}]" class="form-select" data-pmf-configuration-current-value="{{ value|e('html_attr') }}">
    <!-- <option value="{{ value|e('html_attr') }}">{{ value|e('html_attr') }}</option> -->
  </select>
{% endmacro %}
